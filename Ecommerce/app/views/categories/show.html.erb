<h1 class="text-center my-4">Items</h1>
<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if item.image.attached? %>
            <%= image_tag url_for(item.image), class: "card-img-top" %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(item.price) %></p>
            <%= link_to 'Show more', item_path(item) ,  class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="pag-bar mt-5 pt-5">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>

