<h2 class="text-center mb-4" style="color: #e9ecef;">Sign Up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signup' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted">(Minimum length: <%= @minimum_password_length %> characters)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Sign Up", class: 'btn btn-primary btn-lg' %>
  </div>

  <div class="form-group text-center mt-3">
    <p class="text-white">Already have an account? <%= link_to 'Login', new_user_session_path, class: 'text-dark-brown' %></p>
  </div>
  
<% end %>

<style>
  body {
    background: url('<%= asset_path('clothing_store_design_2_.jpg') %>') no-repeat center center fixed;
    background-size: cover;
    color: #e9ecef; 
  }
  .form-signup {
    max-width: 400px; 
    margin: 0 auto;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    background-color: rgba(53, 37, 26, 0.9);
  }
  .form-signup .form-label {
    font-weight: bold;
    color: #e9ecef; 
  }
  .form-signup .form-control {
    border-radius: 5px; 
    border: 1px solid #ced4da; 
    background-color: #495057; 
    color: #e9ecef; 
    box-shadow: none; 
  }
  .form-signup .form-control:focus {
    border-color: #80bdff; 
    box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25); 
  }
  .form-signup .form-text {
    margin-top: 5px; 
    font-size: 0.875rem; 
    color: #adb5bd; 
  }
  .form-signup .btn-primary {
    background-color: #8d6e63; 
    border-color: #8d6e63; 
    border-radius: 5px; 
  }
  .form-signup .btn-primary:hover {
    background-color: #6d4c41; 
    border-color: #6d4c41; 
  }
  .form-signup .text-white {
    color: #e9ecef !important; 
  }
  .form-signup .text-dark-brown {
    color: #6d4c41; 
  }
  .form-signup .text-dark-brown:hover {
    color: #8d6e63; 
  }
</style>
