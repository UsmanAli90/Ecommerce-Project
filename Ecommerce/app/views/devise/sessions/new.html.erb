<h2 class="text-center mb-4" style="color: #e9ecef;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-login' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Log in", class: 'btn btn-primary btn-lg btn-block' %>
  </div>

  <div class="d-flex flex-column justify-content-end mt-3">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-decoration-none forgot-link' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-decoration-none sign-up-link mt-2' %>
  </div>
<% end %>

<!-- Add custom CSS for further adjustments -->
<style>
  body {
    background: url('<%= asset_path('clothing_store_design_2_.jpg') %>') no-repeat center center fixed;
    background-size: cover;
    color: #e9ecef; /* Light text color */
  }
  .form-login {
    max-width: 400px; /* Restrict the form width */
    margin: 0 auto; /* Center align the form */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Add subtle shadow */
    background-color: rgba(53, 37, 26, 0.9); /* Dark brown background color with transparency */
  }
  .form-login .form-label {
    font-weight: bold; /* Make labels bold */
    color: #e9ecef; /* Light color for labels */
  }
  .form-login .form-control {
    border-radius: 5px; /* Rounded input fields */
    border: 1px solid #6c757d; /* Darker border color */
    background-color: #6c757d; /* Dark background for input fields */
    color: #e9ecef; /* Light text color for input fields */
    box-shadow: none; /* Remove default shadow */
  }
  .form-login .form-control:focus {
    border-color: #80bdff; /* Highlight border on focus */
    box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25); /* Subtle shadow on focus */
  }
  .form-login .form-text {
    margin-top: 5px; /* Add space above the help text */
    font-size: 0.875rem; /* Slightly smaller font size */
    color: #adb5bd; /* Muted text color for help text */
  }
  .form-login .btn-primary {
    background-color: #8d6e63; /* Light dark brown color */
    border-color: #8d6e63; /* Match border color */
    border-radius: 5px; /* Rounded button corners */
  }
  .form-login .btn-primary:hover {
    background-color: #6d4c41; /* Darker brown on hover */
    border-color: #6d4c41; /* Darker border color on hover */
  }
  .form-login .forgot-link, .form-login .sign-up-link {
    color: #e9ecef; /* White color for links */
  }
  .form-login .forgot-link:hover, .form-login .sign-up-link:hover {
    color: #b89e82; /* Light brown on hover */
  }
  .form-login .mt-2 {
    margin-top: 8px; /* Add space between the links */
  }
</style>
