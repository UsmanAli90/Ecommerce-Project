<h2 class="text-center mb-4" style="color: #e9ecef;">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-login' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Log in", class: 'btn btn-primary btn-lg btn-block' %>
  </div>

  <div class="d-flex flex-column justify-content-end mt-3">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-decoration-none forgot-link' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-decoration-none sign-up-link mt-2' %>
  </div>
  
<% end %>
<!-- Add custom CSS for further adjustments -->
<style>
  body {
    background: url('<%= asset_path('clothing_store_design_2_.jpg') %>') no-repeat center center fixed;
    background-size: cover;
    color: #e9ecef; 
  }
  .form-login {
    max-width: 400px; 
    margin: 0 auto; 
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); 
    background-color: rgba(53, 37, 26, 0.9); 
  }
  .form-login .form-label {
    font-weight: bold; 
    color: #e9ecef; 
  }
  .form-login .form-control {
    border-radius: 5px; 
    border: 1px solid #6c757d; 
    background-color: #6c757d;
    color: #e9ecef;
    box-shadow: none; 
  }
  .form-login .form-control:focus {
    border-color: #80bdff; 
    box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25); 
  }
  .form-login .form-text {
    margin-top: 5px; 
    font-size: 0.875rem; 
    color: #adb5bd; 
  }
  .form-login .btn-primary {
    background-color: #8d6e63; 
    border-color: #8d6e63; 
    border-radius: 5px; 
  }
  .form-login .btn-primary:hover {
    background-color: #6d4c41; 
    border-color: #6d4c41; 
  }
  .form-login .forgot-link, .form-login .sign-up-link {
    color: #e9ecef; 
  }
  .form-login .forgot-link:hover, .form-login .sign-up-link:hover {
    color: #b89e82; 
  }
  .form-login .mt-2 {
    margin-top: 8px; 
  }
</style>
