<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">Log in</div>
            <div class="card-body">
              <%= form_with url: user_session_path, method: :post, local: true, class: 'needs-validation' do |form| %>
                <% if flash[:alert] %>
                  <div class="alert alert-danger">
                    <%= flash[:alert] %>
                  </div>
                <% end %>

                <div class="form-group">
                  <%= form.label :email, class: 'form-label' %>
                  <%= form.email_field :email, autofocus: true, class: 'form-control', required: true %>
                </div>

                <div class="form-group">
                  <%= form.label :password, class: 'form-label' %>
                  <%= form.password_field :password, class: 'form-control', required: true %>
                </div>

                <div class="form-group mt-3">
                  <%= form.submit 'Log in', class: 'btn btn-primary' %>
                </div>
              <% end %>
              <p class="mt-3">Don't have an account? <%= link_to 'Sign up', new_user_registration_path %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
